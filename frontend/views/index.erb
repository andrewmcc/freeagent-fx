<div class="content">

  <% if defined?(result) %>
    <div id="result">
      <div id="left" class="box">
        <span class="currency">
          <%= amount %> <%= from_currency %>
        </span>
      </div>
      <div id="right" class="box">
        <span class="currency">
          <%= '%.2f' % result %> <%= to_currency %>
        </span>
      </div>
    </div>
    <div id="rate">
      <%= from_currency %> / <%= to_currency %> <%= rate %>
    </div>
  <% end %>

  <div id="form-inputs">
    <form action="/" method="post">

      <div class="form-group">
        <label for="amount">Amount:</label>
        <input type="number" step="0.01" min="0.01" max="9999999999" class="form-control" name="amount" placeholder="Enter an amount" size="10" value="<%= amount %>" required>
      </div>

      <div class="form-group">
        <label for="date">Date:</label>
        <select class="form-control" name="date">
          <% dates.each do |d| %>
            <% if defined?(date) %>
              <option value="<%= d %>" <%= (date == d) ? 'selected' : '' %>><%= Date.parse(d).strftime('%d/%m/%Y') %></option>
            <% else %>
              <option value="<%= d %>"><%= d %></option>
            <% end %>
          <%end %>
        </select>
      </div>

      <div class="form-group">
        <label for="date">From:</label>
        <select class="form-control" name="from_currency">
          <% currencies.each do |from| %>
            <option value="<%= from %>" <%= (from_currency == from) ? 'selected' : '' %>><%= from %></option>
          <%end %>
        </select>
      </div>

      <div class="form-group">
        <label for="date">To:</label>
        <select class="form-control" name="to_currency">
          <% currencies.each do |to| %>
            <option value="<%= to %>" <%= (to_currency == to) ? 'selected' : '' %>><%= to %></option>
          <%end %>
        </select>
      </div>

      <div class="form-group">
        <input type="submit" class="btn btn-default pull-right" value="Convert" />
      </div>

    </form>
  </div>
</div>
